
<div class="portlet-header">
	<h4>All Companies</h4>	
</div>

<div class="portlet-content">

<table>

<% @companies.each do |company| %>
  <tr>
    <td><%= link_to company.name, company %></td>
  </tr>
<% end %>
</table>

<br />
<% if current_user.admin? %>
	<%= link_to 'New Company', new_company_path %>
<% end %>
</div>