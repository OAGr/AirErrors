<h3> Create New Error </h3>
<%= form_for([@unit, @unit.errors.build]) do |f| %>

	<div class="field">
	  <%= f.label :name %><br />
	  <%= f.text_field :name %>
	</div>
	<div class="field">
	  <%= f.label :identification %><br />
	  <%= f.text_field :identification %>
	</div>
	<div class="field">
	  <%= f.label :message %><br />
	  <%= f.text_field :message %>
	</div>
	<div class="field">
	  <%= f.label :action %><br />
	  <%= f.text_field :action %>
	</div>

	<div class="actions">
	  <%= f.submit %>
	</div>

<% end %>