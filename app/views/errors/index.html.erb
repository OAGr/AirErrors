<h1>Listing errors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Identification</th>
    <th>Message</th>
    <th>Action</th>
    <th>Unit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @errors.each do |error| %>
  <tr>
    <td><%= error.name %></td>
    <td><%= error.identification %></td>
    <td><%= error.message %></td>
    <td><%= error.action %></td>
    <td><%= error.unit_id %></td>
    <td><%= link_to 'Show', error %></td>
    <td><%= link_to 'Edit', edit_error_path(error) %></td>
    <td><%= link_to 'Destroy', error, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

